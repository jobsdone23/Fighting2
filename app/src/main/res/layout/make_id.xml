<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <View
            android:id="@+id/make_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="0.9"
            android:background="@drawable/rect"
            android:layout_marginTop="-77dp"
            app:layout_constraintTop_toBottomOf="@+id/make_dog"
            />
        <ImageView
            android:id="@+id/make_dog"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:src="@drawable/dog"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/make_linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/make_dog"
            app:layout_constraintBottom_toTopOf="@+id/make_button3"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <EditText
                    android:id="@+id/make_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="닉네임"
                    app:layout_constraintBottom_toTopOf="@+id/editTextTextEmailAddress"
                    />
                <Button
                    android:id="@+id/make_button1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="중복확인"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@drawable/rect_button"
                    />
            </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_marginTop="10dp"
               >
               <EditText
                   android:id="@+id/make_email"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:ems="10"
                   android:inputType="textEmailAddress"
                   app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
                   android:hint="e-mail"
                   />
               <Button
                   android:id="@+id/make_button2"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="10dp"
                   android:text="중복확인"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:background="@drawable/rect_button"
                   />
           </LinearLayout>

            <EditText
                android:id="@+id/make_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPassword"
                />

            <EditText
                android:id="@+id/make_password_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPassword"
                />

        </LinearLayout>

        <Button
            android:id="@+id/make_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_button"
            app:layout_constraintTop_toBottomOf="@+id/make_linear1"
            app:layout_constraintBottom_toBottomOf="@+id/make_frame"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="가입하기"
            android:textColor="@color/black"
            android:textStyle="bold"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>